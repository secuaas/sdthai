# SD Thai Food - Environment Variables Template
# Copy this file to .env and fill in the values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://sdthai:password@localhost:5432/sdthai?schema=public"

# ============================================
# REDIS
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# JWT SECRETS (Generate with: openssl rand -base64 32)
# ============================================
JWT_SECRET="your-secret-key-minimum-32-characters-required-change-me"
JWT_REFRESH_SECRET="your-refresh-secret-key-minimum-32-characters-required-change-me"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# API CONFIGURATION
# ============================================
PORT=3000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3001"

# ============================================
# NEXT.JS (Frontend)
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ============================================
# OVH S3 STORAGE
# ============================================
S3_ENDPOINT="https://s3.gra.perf.cloud.ovh.net"
S3_REGION="gra"
S3_ACCESS_KEY="your-ovh-s3-access-key"
S3_SECRET_KEY="your-ovh-s3-secret-key"
S3_BUCKET="sdthai-prod-media"
S3_BUCKET_BACKUPS="sdthai-prod-backups"

# ============================================
# EMAIL (Resend)
# ============================================
RESEND_API_KEY="re_your_resend_api_key"
PRINTER_EMAIL="abc123@hpeprint.com"
EMAIL_FROM="noreply@sdthai.ch"

# ============================================
# BEXIO INTEGRATION
# ============================================
BEXIO_CLIENT_ID="your-bexio-client-id"
BEXIO_CLIENT_SECRET="your-bexio-client-secret"
BEXIO_REDIRECT_URI="https://sdthai.ch/api/bexio/callback"

# ============================================
# GOOGLE MAPS
# ============================================
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ============================================
# BUSINESS CONSTANTS
# ============================================
DEFAULT_SHELF_LIFE_DAYS=17
MIN_ORDER_AMOUNT_CHF=40
DEFAULT_ORDER_DEADLINE_TIME="18:00"
DEFAULT_ORDER_DEADLINE_DAYS=1
VAT_RATE=0.081

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Enable debug logging
DEBUG="nestjs:*"
LOG_LEVEL="debug"

# Enable Prisma Studio
# Access at http://localhost:5555
# pnpm prisma studio
